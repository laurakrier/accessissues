<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
    	<th>Date</th>
    	<th>Submitted By</th>
    	<th>Database or Journal</th>
    	<th>Resolved?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
      	<td><%= issue.date.strftime("%m/%d/%Y") %></td>
      	<td><%= issue.name %></td>
      	<td><%= issue.name_of_db %></td>
      	<td></td>
        <td class="list_actions">
        	<%= link_to 'View', issue %><br />
        	<%= link_to 'Edit', edit_issue_path(issue) %><br />
        	<%= link_to 'Delete', issue, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
